FROM ubuntu:22.04

# Temel araçları yükleyin
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    lsb-release \
    software-properties-common \
    curl

# PostgreSQL 16 APT deposunu ekleyin
RUN wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -
RUN echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main 16" > /etc/apt/sources.list.d/pgdg.list

# Paket listelerini güncelleyin
RUN apt-get update

# Gerekli paketleri yükleyin
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
    sudo \
    postgresql-16 \
    postgresql-client-16 \
    postgresql-contrib-16 \
    python3 \
    python3-pip \
    haproxy \
    etcd \
    net-tools

# postgres kullanıcısını oluşturun (eğer yoksa)
RUN useradd -ms /bin/bash postgres

# Gerekli dizinleri oluşturun ve sahipliğini ayarlayın
RUN mkdir -p /var/lib/etcd \
    /etc/haproxy \
    /etc/patroni \
    /var/lib/postgresql/16/main \
    /data/patroni
RUN chown -R postgres:postgres /var/lib/postgresql \
    /var/lib/etcd \
    /etc/haproxy \
    /etc/patroni \
    /data/patroni

# Patroni ve bağımlılıklarını postgres kullanıcısı altında kurun
USER postgres

# Patroni ve bağımlılıklarını yükleyin
RUN pip3 install --no-cache-dir patroni[etcd] psycopg2-binary

# Tekrar root kullanıcısına geçin
USER root

# Script dosyalarını kopyalayın ve sahipliğini ayarlayın
COPY --chown=postgres:postgres etcd_scripts /usr/local/bin/etcd_scripts
COPY --chown=postgres:postgres haproxy_scripts /usr/local/bin/haproxy_scripts
COPY --chown=postgres:postgres patroni_scripts /usr/local/bin/patroni_scripts
COPY --chown=postgres:postgres argument_parser.sh /usr/local/bin/
COPY --chown=postgres:postgres general_functions.sh /usr/local/bin/
COPY --chown=postgres:postgres default_variables.sh /usr/local/bin/
COPY --chown=postgres:postgres arguments.cfg /usr/local/bin/

# Script dosyalarına çalıştırma izni verin
RUN chmod +x /usr/local/bin/*

# PostgreSQL bin dizinini PATH'e ekleyin
ENV PATH="/usr/lib/postgresql/16/bin:${PATH}"

# Varsayılan çalışma dizinini ayarlayın
WORKDIR /home/postgres

# Varsayılan kullanıcıyı postgres olarak ayarlayın
USER postgres

# Varsayılan komutu ayarlayın
CMD ["/bin/bash"]