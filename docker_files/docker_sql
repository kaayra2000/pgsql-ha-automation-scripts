FROM ubuntu:22.04

# Update package lists and install basic tools
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    lsb-release \
    software-properties-common \
    curl

# Add PostgreSQL APT repository
RUN wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -
RUN sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list'

# Update package lists after adding PostgreSQL repository
RUN apt-get update

# Install required packages directly via apt
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
    sudo \
    postgresql-15 \
    python3 \
    python3-pip \
    haproxy \
    etcd \
    net-tools

# Create necessary directories
RUN mkdir -p /var/lib/etcd \
    /etc/haproxy \
    /etc/patroni \
    /var/lib/postgresql/15/main

# Set ownership for PostgreSQL directories
RUN chown -R postgres:postgres /var/lib/postgresql

# Install Patroni and dependencies
RUN pip3 install --no-cache-dir patroni[etcd] psycopg2-binary

# Copy HAProxy scripts
COPY haproxy_scripts /usr/local/bin/haproxy_scripts
COPY general_functions.sh /usr/local/bin/
COPY default_variables.sh /usr/local/bin/

# Make scripts executable
RUN chmod +x /usr/local/bin/*

# Set the default command
CMD ["/bin/bash"]
